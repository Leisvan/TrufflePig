<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>

        <ResourceDictionary x:Key="Dark">
            <ElementTheme x:Key="AppNegativeTheme">Light</ElementTheme>
            <Color x:Key="AppBrandColor1">#FF234df0</Color>
            <Color x:Key="AppBrandColor2">#FFfbbc00</Color>
            <SolidColorBrush x:Key="AppBackgroundColor"
                             Color="#FF161616" />
            <SolidColorBrush x:Key="AppPageBackgroundColor"
                             Color="#FF1D1D1D" />
            <SolidColorBrush x:Key="PopupBackgroundColor"
                             Color="#FF2c2c2c" />
            <SolidColorBrush x:Key="CaptionHighlightColor"
                             Color="#FFf078ff" />
            <SolidColorBrush x:Key="AppAccent1Color"
                             Color="#FF0257FE" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Default">
            <ElementTheme x:Key="AppNegativeTheme">Dark</ElementTheme>
            <Color x:Key="AppBrandColor1">#FF234df0</Color>
            <Color x:Key="AppBrandColor2">#FFfbbc00</Color>
            <SolidColorBrush x:Key="AppBackgroundColor"
                             Color="#FFF6F6F6" />
            <SolidColorBrush x:Key="AppPageBackgroundColor"
                             Color="#FFFCFCFC" />
            <SolidColorBrush x:Key="PopupBackgroundColor"
                             Color="#FFEEEEEE" />
            <SolidColorBrush x:Key="CaptionHighlightColor"
                             Color="#FFf064ff" />
            <SolidColorBrush x:Key="AppAccent1Color"
                             Color="#FF0257FE" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>