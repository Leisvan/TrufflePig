<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <x:Double x:Key="FluentIconsTextBlockFontSize">24</x:Double>
    <x:Double x:Key="FluentIconsItemTextBlockFontSize">16</x:Double>
    <x:Double x:Key="FluentIconsItemTextBlockOpacity">0.75</x:Double>
    <x:Double x:Key="MaterialSymbolsTextFontSize">20</x:Double>
    <x:Double x:Key="SmoothHeaderTextBlockFontSize">32</x:Double>
    <x:Double x:Key="SmoothItemTitleTextBlockFontSize">16</x:Double>
    <x:Double x:Key="SmoothTitleTextBlockFontSize">24</x:Double>
    <x:Double x:Key="SmoothSubtitleTextBlockFontSize">16</x:Double>
    <x:Double x:Key="SmoothItemBodyTextBlockFontSize">14</x:Double>
    <x:Double x:Key="SmoothItemCaptionTextBlockOpacity">0.75</x:Double>
    <HorizontalAlignment x:Key="SmoothItemTextBlockHorizontalAlignment">Left</HorizontalAlignment>
    <TextAlignment x:Key="SmoothItemHorizontalAlignment">Left</TextAlignment>

    <!--  Base styles  -->
    <Style x:Key="SmoothRegularTextBlockStyle"
           TargetType="TextBlock">
        <Setter Property="FontFamily"
                Value="{StaticResource SmoothRegularFontFamily}" />
    </Style>
    <Style x:Key="SmoothLightTextBlockStyle"
           TargetType="TextBlock">
        <Setter Property="FontFamily"
                Value="{StaticResource SmoothLightFontFamily}" />
    </Style>
    <Style x:Key="SmoothBoldTextBlockStyle"
           TargetType="TextBlock">
        <Setter Property="FontFamily"
                Value="{StaticResource SmoothBoldFontFamily}" />
    </Style>
    <Style x:Key="SmoothIconTextBlockStyle"
           TargetType="TextBlock">
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="TextAlignment"
                Value="Center" />
    </Style>

    <!--  Icon styles  -->
    <Style x:Key="FluentIconsTextBlockStyle"
           BasedOn="{StaticResource SmoothIconTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontFamily"
                Value="{StaticResource FluentIconsFontFamily}" />
        <Setter Property="FontSize"
                Value="{StaticResource FluentIconsTextBlockFontSize}" />
    </Style>
    <Style x:Key="FluentIconsItemTextBlockStyle"
           BasedOn="{StaticResource SmoothIconTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontFamily"
                Value="{StaticResource FluentIconsFontFamily}" />
        <Setter Property="FontSize"
                Value="{StaticResource FluentIconsItemTextBlockFontSize}" />
        <Setter Property="Opacity"
                Value="{StaticResource FluentIconsItemTextBlockOpacity}" />
    </Style>
    <Style x:Key="MaterialSymbolsTextBlockStyle"
           BasedOn="{StaticResource SmoothIconTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontFamily"
                Value="{StaticResource MaterialSymbolsFontFamily}" />
        <Setter Property="FontSize"
                Value="{StaticResource MaterialSymbolsTextFontSize}" />
    </Style>
    <Style x:Key="FontAwesomeBrandsTextBlockStyle"
           BasedOn="{StaticResource SmoothIconTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontFamily"
                Value="{StaticResource FontAwesomeBrandsFontFamily}" />
        <Setter Property="FontSize"
                Value="{StaticResource MaterialSymbolsTextFontSize}" />
    </Style>

    <!--  General text styles  -->
    <Style x:Key="SmoothHeaderTextBlockStyle"
           BasedOn="{StaticResource SmoothLightTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="{StaticResource SmoothHeaderTextBlockFontSize}" />
    </Style>
    <Style x:Key="SmoothTitleTextBlockStyle"
           BasedOn="{StaticResource SmoothLightTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="{StaticResource SmoothTitleTextBlockFontSize}" />
    </Style>
    <Style x:Key="SmoothSubtitleTextBlockStyle"
           BasedOn="{StaticResource SmoothLightTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="{StaticResource SmoothSubtitleTextBlockFontSize}" />
    </Style>
    <Style x:Key="SmoothBodyTextBlockStyle"
           BasedOn="{StaticResource SmoothRegularTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="TextWrapping"
                Value="WrapWholeWords" />
    </Style>
    <Style x:Key="SmoothCaptionTextBlockStyle"
           BasedOn="{StaticResource SmoothRegularTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="{StaticResource CaptionTextBlockFontSize}" />
        <Setter Property="TextWrapping"
                Value="WrapWholeWords" />
    </Style>

    <!--  Item text styles  -->
    <Style x:Key="SmoothItemTitleTextBlockStyle"
           BasedOn="{StaticResource SmoothRegularTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="{StaticResource SmoothItemTitleTextBlockFontSize}" />
        <Setter Property="HorizontalAlignment"
                Value="{StaticResource SmoothItemTextBlockHorizontalAlignment}" />
        <Setter Property="TextAlignment"
                Value="{ThemeResource SmoothItemHorizontalAlignment}" />
    </Style>
    <Style x:Key="SmoothItemBodyTextBlockStyle"
           TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="{StaticResource SmoothItemBodyTextBlockFontSize}" />
        <Setter Property="TextTrimming"
                Value="CharacterEllipsis" />
        <Setter Property="TextWrapping"
                Value="WrapWholeWords" />
        <Setter Property="MaxLines"
                Value="2" />
        <Setter Property="HorizontalAlignment"
                Value="{ThemeResource SmoothItemTextBlockHorizontalAlignment}" />
        <Setter Property="TextAlignment"
                Value="{ThemeResource SmoothItemHorizontalAlignment}" />
    </Style>
    <Style x:Key="SmoothItemCaptionTextBlockStyle"
           BasedOn="{StaticResource SmoothItemBodyTextBlockStyle}"
           TargetType="TextBlock">
        <Setter Property="Opacity"
                Value="{StaticResource SmoothItemCaptionTextBlockOpacity}" />
    </Style>
</ResourceDictionary>